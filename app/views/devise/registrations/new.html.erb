<%= render 'devise/shared/guest' %>
<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= autocomplete_field_tag 'user[username]', nil, autocomplete_user_username_users_path, placeholder: "ユーザー名" %>
  </div>

  <div class="field">
    <%= f.email_field :email, placeholder: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: "パスワード確認用" %>
  </div>

  <div>
  <%= f.submit "新しいアカウントを作成", class: "form-control btn-primary mb-4", data:{disable_with: "新しいアカウントを作成"} %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>