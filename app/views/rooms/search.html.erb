<h2>検索結果</h2>

<% if user_signed_in? %>
  <div class="container-fiuld room">
    <div class="row">
      <% @rooms.each do |room| %>
        <div class="col-sm-6 col-lg-4 col-xl-3">
          <div class="room-frame-inner">
              <%= link_to new_user_room_reservation_path(current_user.id, room_id: room.id) do %>
                <div class="room-image-out">
                  <%= image_tag room.room_image.thumb.url, alt: "部屋画像" ,class: "room-image" %>
                </div>
                <div class="room-profile">
                  <p class="room-profile-name"><%= room.room_name %></p>
                  <p class="room-profile-city"><%= room.address %></p>
                  <p class="room-profile-price price-icon"><%= room.price %></p>
                </div>
              </a>
              <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="container-fiuld room">
    <div class="row">
      <% @rooms.each do |room| %>
        <div class="col-sm-6 col-lg-4 col-xl-3">
          <div class="room-frame-inner"> 
              <%= link_to sign_in_path do %>
                <div class="room-image-out">
                  <%= image_tag room.room_image.thumb.url, alt: "部屋画像" ,class: "room-image" %>
                </div>
                  <div class="room-profile">
                    <p class="room-profile-name"><%= room.room_name %></p>
                    <p class="room-profile-city"><%= room.address %></p>
                    <p class="room-profile-price price-icon"><%= room.price %></p>
                  </div>
                </a>
              <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>