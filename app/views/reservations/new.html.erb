<div class="container device">
  <div class="device-frame">
  <%= render "devise/shared/error", obj: @reservation %>

  <h4>予約内容入力画面</h4>
  
  <div class="device_inner">
  <%= form_with model: @reservation, url: user_room_reservations_path(user_id: current_user.id) do |f| %>

      <%= f.hidden_field :user_id, value: @reservation.user_id %>
      <%= f.hidden_field :room_id, value: @reservation.room_id %>

      <div class="field form-row">
      
        <%= f.label :start_date, "開始日" %>
        <%= f.date_field :start_date, class: 'form-control mb-4' %>
      </div>

      <div class="field form-row">
        <%= f.label :end_date, "終了日" %>
        <%= f.date_field :end_date, class: 'form-control mb-4' %>
      </div>

      <div class="field form-row">
        <%= f.label :number_of_people, "人数" %>
        <%= f.number_field :number_of_people, class: 'form-control mb-4' %>
      </div>

      <div class="actions">
        <%= f.submit "予約する", class: 'form-control btn-primary mb-4' %>   
      </div>
      </div>
  </div>
</div>  
  <% end %>
  