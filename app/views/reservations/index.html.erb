
<div class="container-fiuld reservations">
  <h4 class="pb-4">予約済みルーム一覧</h4>
    <table>
      <thead>
        <tr align="center">
          <th>ルーム画像</th>
          <th>ルーム名</th>
          <th>ルーム紹介</th>
          <th>合計料金</th>
          <th>開始日</th>
          <th>終了日</th>
          <th>予約確定日</th>
        </tr>
      </thead>
      <tbody>
        <% @reservations.zip(@rooms) do |reservation, room| %>
          <tr>
            <td><%= image_tag reservation.room.room_image.thumb.url, class: "reservations-image" %></td>
            <td class="posts-name"><%= reservation.room.room_name %></td>
            <td class="posts-content"><%= reservation.room.introduction %></td>
            <td class="price-icon"><%= "#{reservation.room.price * reservation.number_of_people}" %></td>
            <td><%= reservation.start_date&.strftime("%Y年%m月%d日") %></td>
            <td><%= reservation.end_date&.strftime("%Y年%m月%d日") %></td>
            <td><%= reservation.created_at&.strftime("%Y年%m月%d日") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>